<h1>Books</h1>

<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <%= @books.each do |book| %>

    <p>タイトル</p>
    <span><%= book.title %></span>
  
    <p>Body</p>
    <span><%= book.body %></span>
  
  <% end %>
  
  <h1>
    New book
  </h1>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>

<% end %>
