<body>
  <h1>Books</h1>
  <table>
    
    <thead>
      <tr>
        <th>title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    
    <tboby>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book) %></td>
          <td><%= link_to "Edit", edit_book_path(book) %></td>
          <td><%= link_to "Destroy", destroy_book_path(book), method: :delete, "deta-confirm" =>"Are you sure?" %></td>
        </tr>
      <% end %>
    </tboby>
    
  </table>
</body>

  
<h1>New book</h1>
  
<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <h4>Title</h4>
  <div.field><%= f.text_field :title %></div.field>
  
  <h4>Body</h4>
  </div.field><%= f.text_area :body %></div.field>
	
  <%= f.submit 'Create Book' %>

<% end %>
